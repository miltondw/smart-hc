<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="controllers.HistoriaClinicaController" styleClass="dashboard">
    
    <!-- Header -->
    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            
            <Button text="← Volver" onAction="#volver" styleClass="btn-back"/>
            
            <Label text="Historia Clínica" styleClass="header-title">
                <font>
                    <Font name="System Bold" size="20"/>
                </font>
            </Label>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Label fx:id="lblPacienteInfo" text="Paciente: [Nombre]" styleClass="user-label">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
        </HBox>
    </top>
    
    <!-- Centro - Formulario de Historia Clínica -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="content-scroll">
            <VBox spacing="20" styleClass="content">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <!-- Datos Personales -->
                <VBox fx:id="seccionDatosPersonales" spacing="10" styleClass="form-section">
                    <Label text="DATOS PERSONALES" styleClass="section-title">
                        <font>
                            <Font name="System Bold" size="16"/>
                        </font>
                    </Label>
                    
                    <GridPane hgap="15" vgap="10">
                        <Label text="Fecha de Nacimiento:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="dateFechaNacimiento" promptText="dd/MM/yyyy" 
                                  GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>
                        
                        <Label text="Edad:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <Label fx:id="lblEdadCalculada" text="-- años" 
                                  GridPane.rowIndex="0" GridPane.columnIndex="3" style="-fx-font-weight: bold;"/>
                        
                        <Label text="Dirección:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtDireccion" promptText="Dirección completa" 
                                  GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="300"/>
                        
                        <Label text="Ciudad:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <TextField fx:id="txtCiudad" promptText="Ciudad" 
                                  GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="200"/>
                        
                        <Label text="Tipo de Sangre:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cmbTipoSangre" promptText="Seleccionar" 
                                 GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="150"/>
                        
                        <Label text="Estado Civil:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                        <ComboBox fx:id="cmbEstadoCivil" promptText="Seleccionar" 
                                 GridPane.rowIndex="2" GridPane.columnIndex="3" prefWidth="150"/>
                        
                        <Label text="Ocupación:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtOcupacion" promptText="Ocupación" 
                                  GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="300"/>
                        
                        <Label text="Contacto de Emergencia:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtContactoEmergencia" promptText="Nombre completo" 
                                  GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="300"/>
                        
                        <Label text="Teléfono Emergencia:" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
                        <TextField fx:id="txtTelefonoEmergencia" promptText="Teléfono" 
                                  GridPane.rowIndex="4" GridPane.columnIndex="3" prefWidth="200"/>
                    </GridPane>
                </VBox>
                
                <!-- Antecedentes -->
                <VBox fx:id="seccionAntecedentes" spacing="10" styleClass="form-section">
                    <Label text="ANTECEDENTES" styleClass="section-title">
                        <font>
                            <Font name="System Bold" size="16"/>
                        </font>
                    </Label>
                    
                    <VBox spacing="5">
                        <Label text="Enfermedades Personales:"/>
                        <TextArea fx:id="txtEnfermedadesPersonales" promptText="Diabetes, Hipertensión, etc." 
                                 prefRowCount="3" wrapText="true"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Enfermedades Familiares:"/>
                        <TextArea fx:id="txtEnfermedadesFamiliares" promptText="Antecedentes familiares" 
                                 prefRowCount="3" wrapText="true"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Cirugías Previas:"/>
                        <TextArea fx:id="txtCirugias" promptText="Listar cirugías y fecha aproximada" 
                                 prefRowCount="2" wrapText="true"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Alergias:"/>
                        <TextArea fx:id="txtAlergias" promptText="Medicamentos, alimentos, etc." 
                                 prefRowCount="2" wrapText="true"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Medicamentos Actuales:"/>
                        <TextArea fx:id="txtMedicamentos" promptText="Medicamentos que toma actualmente" 
                                 prefRowCount="3" wrapText="true"/>
                    </VBox>
                </VBox>
                
                <!-- Motivo de Consulta -->
                <VBox fx:id="seccionMotivo" spacing="10" styleClass="form-section">
                    <Label text="MOTIVO DE CONSULTA" styleClass="section-title">
                        <font>
                            <Font name="System Bold" size="16"/>
                        </font>
                    </Label>
                    
                    <VBox spacing="5">
                        <Label text="¿Por qué consulta hoy?"/>
                        <TextArea fx:id="txtMotivoConsulta" promptText="Describa su motivo de consulta" 
                                 prefRowCount="3" wrapText="true"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Enfermedad Actual:"/>
                        <TextArea fx:id="txtEnfermedadActual" promptText="Síntomas, duración, etc." 
                                 prefRowCount="4" wrapText="true"/>
                    </VBox>
                </VBox>
                
                <!-- Signos Vitales -->
                <VBox fx:id="seccionSignos" spacing="10" styleClass="form-section">
                    <Label text="SIGNOS VITALES" styleClass="section-title">
                        <font>
                            <Font name="System Bold" size="16"/>
                        </font>
                    </Label>
                    
                    <GridPane hgap="15" vgap="10">
                        <Label text="Temperatura (°C):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtTemperatura" promptText="36.5" 
                                  GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="100"/>
                        
                        <Label text="Presión Sistólica:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <TextField fx:id="txtPresionSistolica" promptText="120" 
                                  GridPane.rowIndex="0" GridPane.columnIndex="3" prefWidth="100"/>
                        
                        <Label text="Presión Diastólica:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtPresionDiastolica" promptText="80" 
                                  GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="100"/>
                        
                        <Label text="Frecuencia Cardíaca:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <TextField fx:id="txtFrecuenciaCardiaca" promptText="70" 
                                  GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="100"/>
                        
                        <Label text="Saturación O₂ (%):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtSaturacionOxigeno" promptText="98" 
                                  GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="100"/>
                        
                        <Label text="Peso (kg):" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                        <TextField fx:id="txtPeso" promptText="70.0" 
                                  GridPane.rowIndex="2" GridPane.columnIndex="3" prefWidth="100"/>
                        
                        <Label text="Altura (m):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtAltura" promptText="1.70" 
                                  GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="100"/>
                        
                        <Label text="IMC:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                        <Label fx:id="lblIMC" text="--" styleClass="imc-label"
                              GridPane.rowIndex="3" GridPane.columnIndex="3">
                            <font>
                                <Font name="System Bold" size="14"/>
                            </font>
                        </Label>
                    </GridPane>
                </VBox>
                
                <!-- Diagnóstico y Nivel de Riesgo -->
                <VBox fx:id="seccionDiagnostico" spacing="10" styleClass="section">
                    <Label text="DIAGNÓSTICO Y CLASIFICACIÓN" styleClass="section-title">
                        <font>
                            <Font name="System Bold" size="16"/>
                        </font>
                    </Label>
                    
                    <Label text="Diagnóstico:"/>
                    <TextArea fx:id="txtDiagnostico" promptText="Ingrese el diagnóstico médico" 
                             wrapText="true" prefRowCount="3"/>
                    
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="Nivel de Riesgo:">
                            <font>
                                <Font name="System Bold" size="14"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="cmbNivelRiesgo" prefWidth="200" promptText="Seleccione el nivel"/>
                    </HBox>
                </VBox>
                
                <!-- Seguimiento Crónico (Solo Médicos) -->
                <VBox fx:id="seccionSeguimiento" spacing="10" styleClass="section">
                    <Label text="SEGUIMIENTO CRÓNICO" styleClass="section-title">
                        <font>
                            <Font name="System Bold" size="16"/>
                        </font>
                    </Label>
                    
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label fx:id="lblEstadoSeguimiento" text="Sin seguimiento activo" styleClass="info-label">
                            <font>
                                <Font size="14"/>
                            </font>
                        </Label>
                    </HBox>
                    
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Button fx:id="btnCrearSeguimiento" text="✚ Marcar como Seguimiento Crónico" 
                               onAction="#crearSeguimientoCronico" 
                               prefWidth="280" prefHeight="40" styleClass="btn-action"/>
                        <Button fx:id="btnVerSeguimiento" text="Ver Seguimiento" 
                               onAction="#verSeguimiento" 
                               prefWidth="180" prefHeight="40" styleClass="btn-secondary"
                               visible="false" managed="false"/>
                    </HBox>
                    
                    <VBox fx:id="panelNuevoSeguimiento" spacing="10" visible="false" managed="false">
                        <Label text="Información del Seguimiento:">
                            <font>
                                <Font name="System Bold" size="14"/>
                            </font>
                        </Label>
                        
                        <Label text="Tratamiento:"/>
                        <TextArea fx:id="txtTratamiento" promptText="Describa el tratamiento prescrito" 
                                 wrapText="true" prefRowCount="3"/>
                        
                        <Label text="Próxima Cita:"/>
                        <TextField fx:id="txtProximaCita" promptText="Ej: 15/01/2026"/>
                        
                        <Label text="Notas adicionales:"/>
                        <TextArea fx:id="txtNotasSeguimiento" promptText="Notas para el seguimiento" 
                                 wrapText="true" prefRowCount="2"/>
                        
                        <HBox spacing="10">
                            <Button text="Confirmar Seguimiento" onAction="#confirmarSeguimiento" 
                                   styleClass="btn-primary" prefWidth="200"/>
                            <Button text="Cancelar" onAction="#cancelarSeguimiento" 
                                   styleClass="btn-secondary" prefWidth="120"/>
                        </HBox>
                    </VBox>
                </VBox>
                
                <!-- Botones de acción -->
                <HBox spacing="15" alignment="CENTER">
                    <Button text="Guardar Cambios" onAction="#guardarHistoria" 
                           prefWidth="200" prefHeight="40" styleClass="btn-primary"/>
                    <Button text="Cancelar" onAction="#volver" 
                           prefWidth="150" prefHeight="40" styleClass="btn-secondary"/>
                </HBox>
                
            </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>

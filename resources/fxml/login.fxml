<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.LoginController" 
      alignment="CENTER" spacing="20" styleClass="login-container">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    
    <!-- Logo y Título -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="SMART HC" styleClass="app-title">
            <font>
                <Font name="System Bold" size="32"/>
            </font>
        </Label>
        <Label text="Historias Clínicas Inteligentes" styleClass="app-subtitle">
            <font>
                <Font size="14"/>
            </font>
        </Label>
    </VBox>
    
    <Separator prefWidth="200"/>
    
    <!-- Formulario de Login -->
    <VBox spacing="15" alignment="CENTER">
        
        <VBox spacing="5">
            <Label text="Correo Electrónico" styleClass="field-label"/>
            <TextField fx:id="emailField" promptText="ejemplo@email.com" 
                      prefWidth="300" styleClass="custom-text-field"/>
        </VBox>
        
        <VBox spacing="5">
            <Label text="Contraseña" styleClass="field-label"/>
            <PasswordField fx:id="passwordField" promptText="••••••••" 
                          prefWidth="300" styleClass="custom-text-field"/>
        </VBox>
        
        <Label fx:id="errorLabel" styleClass="error-label" visible="false"/>
        
    </VBox>
    
    <!-- Botones de tipo de usuario -->
    <VBox spacing="10" alignment="CENTER">
        <Label text="Ingresar como:" styleClass="field-label"/>
        
        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="btnMedico" text="Médico" onAction="#loginMedico" 
                   prefWidth="140" prefHeight="40" styleClass="btn-primary"/>
            <Button fx:id="btnPaciente" text="Paciente" onAction="#loginPaciente" 
                   prefWidth="140" prefHeight="40" styleClass="btn-secondary"/>
        </HBox>
    </VBox>
    
    <Separator prefWidth="200"/>
    
    <!-- Link de registro -->
    <HBox alignment="CENTER" spacing="5">
        <Label text="¿No tienes cuenta?"/>
        <Hyperlink text="Registrarse" onAction="#irARegistro" styleClass="link"/>
    </HBox>
    
</VBox>
